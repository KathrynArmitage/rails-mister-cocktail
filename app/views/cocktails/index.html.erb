<h1> Cocktail Menu</h1>
<h2><%= link_to "Create a new cocktail", new_cocktail_path %></h2>
<div class="container">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail.id) do  %>
      <div class="card">
       <%= cl_image_tag cocktail.photo.key, class: "card-img-top" %>
        <div class="card-body">
          <p class="card-text"><%=cocktail.name%></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

