      <div class="card">
        <img src="https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text"><%=cocktail.name%></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
